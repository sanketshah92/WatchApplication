<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtExportProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/msg_export_progress"
        android:textColor="@color/menu_item_text_color_selected"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/progressExportHR"
        app:layout_constraintEnd_toEndOf="@+id/progressExportHR"
        app:layout_constraintStart_toStartOf="@+id/progressExportHR"
        app:layout_constraintTop_toTopOf="@+id/progressExportHR" />

    <ProgressBar
        android:id="@+id/progressExportHR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleY="1.22"
        android:scaleX="1.22"
        android:indeterminateDrawable="@drawable/progeess_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>